{
  "name": "aivi-vscode",
  "displayName": "AIVI Language Support",
  "description": "Syntax highlighting and formatting for the AIVI language (from the AIVI specs).",
  "version": "0.1.20",
  "publisher": "aivi",
  "packageManager": "pnpm@9.15.4",
  "repository": {
    "type": "git",
    "url": "https://example.invalid/aivi"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "icon": "assets/aivi-64.png",
  "main": "./dist/extension.js",
  "files": [
    "dist/extension.js",
    "syntaxes/**",
    "themes/**",
    "language-configuration.json",
    "ebnf-language-configuration.json",
    "assets/**",
    "bin/**",
    "LICENSE",
    "README.md"
  ],
  "activationEvents": [
    "onLanguage:aivi"
  ],
  "contributes": {
    "languages": [
      {
        "id": "aivi",
        "aliases": [
          "AIVI",
          "aivi"
        ],
        "extensions": [
          ".aivi"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "ebnf",
        "aliases": [
          "EBNF",
          "ebnf"
        ],
        "extensions": [
          ".ebnf"
        ],
        "configuration": "./ebnf-language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "aivi",
        "scopeName": "source.aivi",
        "path": "./syntaxes/aivi.tmLanguage.json"
      },
      {
        "language": "ebnf",
        "scopeName": "source.ebnf",
        "path": "./syntaxes/ebnf.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "AIVI Dark Modern",
        "uiTheme": "vs-dark",
        "path": "./themes/aivi-dark-modern-color-theme.json"
      }
    ],
    "configuration": {
      "title": "AIVI",
      "properties": {
        "aivi.format.indentSize": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 8,
          "description": "Indentation size used by the built-in AIVI formatter."
        },
        "aivi.format.maxBlankLines": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "maximum": 5,
          "description": "Maximum number of consecutive blank lines produced by the formatter."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsgo -p .",
    "build": "node scripts/build.js",
    "watch": "tsgo -watch -p .",
    "package": "vsce package --no-dependencies",
    "vscode:prepublish": "pnpm run compile"
  },
  "dependencies": {
    "vscode-languageclient": "9.0.1"
  },
  "devDependencies": {
    "@types/node": "25.2.2",
    "@types/vscode": "1.107.0",
    "@vscode/vsce": "3.7.1",
    "@typescript/native-preview": "latest"
  }
}
