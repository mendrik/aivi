{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "AIVI",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#sigil"
    },
    {
      "include": "#string"
    },
    {
      "include": "#number"
    },
    {
      "include": "#decorator"
    },
    {
      "include": "#placeholder"
    },
    {
      "include": "#keyword"
    },
    {
      "include": "#boolean"
    },
    {
      "include": "#constructor"
    },
    {
      "include": "#type"
    },
    {
      "include": "#pipe"
    },
    {
      "include": "#arrow"
    },
    {
      "include": "#cmp"
    },
    {
      "include": "#question"
    },
    {
      "include": "#operator"
    }
  ],
  "repository": {
    "arrow": {
      "patterns": [
        {
          "match": "(=>|<-|->)",
          "name": "keyword.operator.arrow.aivi"
        }
      ]
    },
    "boolean": {
      "patterns": [
        {
          "match": "\\b(True|False)\\b",
          "name": "constant.language.boolean.aivi"
        }
      ]
    },
    "cmp": {
      "patterns": [
        {
          "match": "(==|!=|<=|>=|=|<|>)",
          "name": "keyword.operator.comparison.aivi"
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "match": "//.*$",
          "name": "comment.line.double-slash.aivi"
        },
        {
          "begin": "/\\*",
          "end": "\\*/",
          "name": "comment.block.aivi"
        }
      ]
    },
    "constructor": {
      "patterns": [
        {
          "match": "\\b(None|Some|Ok|Err)\\b",
          "name": "support.constant.aivi"
        }
      ]
    },
    "decorator": {
      "patterns": [
        {
          "match": "@[a-z][A-Za-z0-9_]*\\b",
          "name": "meta.annotation.decorator.aivi"
        }
      ]
    },
    "keyword": {
      "patterns": [
        {
          "match": "\\b(do|effect|generate|resource|if|then|else|when|yield|loop|recurse|pure)\\b",
          "name": "keyword.control.aivi"
        },
        {
          "match": "\\b(module|export|use|as|hiding|domain|class|instance|type|over)\\b",
          "name": "keyword.other.aivi"
        }
      ]
    },
    "number": {
      "patterns": [
        {
          "match": "\\b\\d+(?:\\.\\d+)?\\b",
          "name": "constant.numeric.aivi"
        }
      ]
    },
    "operator": {
      "patterns": [
        {
          "match": "(\\.\\.\\.|!=|&&|\\+\\+|->|\\.\\.|::|:=|<-|<<|<=|<\\||==|=>|>=|>>|\\?\\?|\\|>|\\|\\||!|%|&|\\*|\\+|,|-|\\.|/|:|;|<|=|>|\\?|\\^|\\||~)",
          "name": "keyword.operator.aivi"
        }
      ]
    },
    "pipe": {
      "patterns": [
        {
          "match": "(<\\||\\|>|\\|(?!\\|))",
          "name": "keyword.operator.pipe.aivi"
        }
      ]
    },
    "placeholder": {
      "patterns": [
        {
          "match": "\\b_\\b",
          "name": "variable.language.placeholder.aivi"
        }
      ]
    },
    "question": {
      "patterns": [
        {
          "match": "\\?(?!\\?)",
          "name": "keyword.operator.match.aivi"
        }
      ]
    },
    "sigil": {
      "patterns": [
        {
          "begin": "(~[a-z][A-Za-z0-9_]*)(/)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.sigil.aivi"
            },
            "2": {
              "name": "punctuation.definition.string.begin.aivi"
            }
          },
          "end": "(?<!\\\\)/(?:[a-zA-Z]*)",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.aivi"
            }
          },
          "name": "string.quoted.other.sigil.aivi",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.aivi"
            }
          ]
        },
        {
          "begin": "(~[a-z][A-Za-z0-9_]*)(\\\")",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.sigil.aivi"
            },
            "2": {
              "name": "punctuation.definition.string.begin.aivi"
            }
          },
          "end": "(?<!\\\\)\\\"(?:[a-zA-Z]*)",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.aivi"
            }
          },
          "name": "string.quoted.other.sigil.aivi",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.aivi"
            }
          ]
        },
        {
          "begin": "(~[a-z][A-Za-z0-9_]*)(\\()",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.sigil.aivi"
            },
            "2": {
              "name": "punctuation.definition.string.begin.aivi"
            }
          },
          "end": "(?<!\\\\)\\)(?:[a-zA-Z]*)",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.aivi"
            }
          },
          "name": "string.quoted.other.sigil.aivi",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.aivi"
            }
          ]
        },
        {
          "begin": "(~[a-z][A-Za-z0-9_]*)(\\[)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.sigil.aivi"
            },
            "2": {
              "name": "punctuation.definition.string.begin.aivi"
            }
          },
          "end": "(?<!\\\\)\\](?:[a-zA-Z]*)",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.aivi"
            }
          },
          "name": "string.quoted.other.sigil.aivi",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.aivi"
            }
          ]
        },
        {
          "begin": "(~[a-z][A-Za-z0-9_]*)(\\{)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.sigil.aivi"
            },
            "2": {
              "name": "punctuation.definition.string.begin.aivi"
            }
          },
          "end": "(?<!\\\\)\\}(?:[a-zA-Z]*)",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.aivi"
            }
          },
          "name": "string.quoted.other.sigil.aivi",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.aivi"
            }
          ]
        }
      ]
    },
    "string": {
      "patterns": [
        {
          "begin": "\"",
          "end": "\"",
          "name": "string.quoted.double.aivi",
          "patterns": [
            {
              "match": "\\\\([\\\\\\\"nrt]|u\\{[0-9a-fA-F]+\\})",
              "name": "constant.character.escape.aivi"
            },
            {
              "begin": "\\{",
              "beginCaptures": {
                "0": {
                  "name": "punctuation.section.interpolation.begin.aivi"
                }
              },
              "end": "\\}",
              "endCaptures": {
                "0": {
                  "name": "punctuation.section.interpolation.end.aivi"
                }
              },
              "name": "meta.interpolation.aivi",
              "patterns": [
                {
                  "include": "#comment"
                },
                {
                  "include": "#sigil"
                },
                {
                  "include": "#string"
                },
                {
                  "include": "#number"
                },
                {
                  "include": "#decorator"
                },
                {
                  "include": "#placeholder"
                },
                {
                  "include": "#keyword"
                },
                {
                  "include": "#boolean"
                },
                {
                  "include": "#constructor"
                },
                {
                  "include": "#type"
                },
                {
                  "include": "#pipe"
                },
                {
                  "include": "#arrow"
                },
                {
                  "include": "#cmp"
                },
                {
                  "include": "#question"
                },
                {
                  "include": "#operator"
                }
              ]
            }
          ]
        },
        {
          "begin": "`",
          "end": "`",
          "name": "string.quoted.other.backtick.aivi"
        },
        {
          "begin": "'",
          "end": "'",
          "name": "string.quoted.single.aivi",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.aivi"
            }
          ]
        }
      ]
    },
    "type": {
      "patterns": [
        {
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b",
          "name": "entity.name.type.aivi"
        }
      ]
    }
  },
  "scopeName": "source.aivi"
}
