{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "AIVI",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#sigil"
    },
    {
      "include": "#string"
    },
    {
      "include": "#number"
    },
    {
      "include": "#decorator"
    },
    {
      "include": "#keyword"
    },
    {
      "include": "#boolean"
    },
    {
      "include": "#constructor"
    },
    {
      "include": "#type"
    },
    {
      "include": "#operator"
    }
  ],
  "repository": {
    "boolean": {
      "patterns": [
        {
          "match": "\\b(True|False)\\b",
          "name": "constant.language.boolean.aivi"
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "match": "//.*$",
          "name": "comment.line.double-slash.aivi"
        },
        {
          "begin": "/\\*",
          "end": "\\*/",
          "name": "comment.block.aivi"
        }
      ]
    },
    "constructor": {
      "patterns": [
        {
          "match": "\\b(None|Some|Ok|Err)\\b",
          "name": "support.constant.aivi"
        }
      ]
    },
    "decorator": {
      "patterns": [
        {
          "match": "@[a-z][A-Za-z0-9_]*\\b",
          "name": "meta.annotation.decorator.aivi"
        }
      ]
    },
    "keyword": {
      "patterns": [
        {
          "match": "\\b(do|effect|generate|resource|if|then|else|when|yield|loop|recurse)\\b",
          "name": "keyword.control.aivi"
        },
        {
          "match": "\\b(module|export|use|as|hiding|domain|class|instance|type|over)\\b",
          "name": "keyword.other.aivi"
        }
      ]
    },
    "number": {
      "patterns": [
        {
          "match": "\\b\\d+(?:\\.\\d+)?\\b",
          "name": "constant.numeric.aivi"
        }
      ]
    },
    "operator": {
      "patterns": [
        {
          "match": "(\\.\\.\\.|!=|&&|\\+\\+|->|\\.\\.|::|:=|<-|<<|<=|<\\||==|=>|>=|>>|\\?\\?|\\|>|\\|\\||!|%|&|\\*|\\+|,|-|\\.|/|:|;|<|=|>|\\?|\\^|\\||~)",
          "name": "keyword.operator.aivi"
        }
      ]
    },
    "sigil": {
      "patterns": [
        {
          "begin": "(~[a-z][A-Za-z0-9_]*)(/)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.sigil.aivi"
            },
            "2": {
              "name": "punctuation.definition.string.begin.aivi"
            }
          },
          "end": "(?<!\\\\)/(?:[a-zA-Z]*)",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.aivi"
            }
          },
          "name": "string.quoted.other.sigil.aivi",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.aivi"
            }
          ]
        },
        {
          "begin": "(~[a-z][A-Za-z0-9_]*)(\\\")",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.sigil.aivi"
            },
            "2": {
              "name": "punctuation.definition.string.begin.aivi"
            }
          },
          "end": "(?<!\\\\)\\\"(?:[a-zA-Z]*)",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.aivi"
            }
          },
          "name": "string.quoted.other.sigil.aivi",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.aivi"
            }
          ]
        },
        {
          "begin": "(~[a-z][A-Za-z0-9_]*)(\\()",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.sigil.aivi"
            },
            "2": {
              "name": "punctuation.definition.string.begin.aivi"
            }
          },
          "end": "(?<!\\\\)\\)(?:[a-zA-Z]*)",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.aivi"
            }
          },
          "name": "string.quoted.other.sigil.aivi",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.aivi"
            }
          ]
        },
        {
          "begin": "(~[a-z][A-Za-z0-9_]*)(\\[)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.sigil.aivi"
            },
            "2": {
              "name": "punctuation.definition.string.begin.aivi"
            }
          },
          "end": "(?<!\\\\)\\](?:[a-zA-Z]*)",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.aivi"
            }
          },
          "name": "string.quoted.other.sigil.aivi",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.aivi"
            }
          ]
        },
        {
          "begin": "(~[a-z][A-Za-z0-9_]*)(\\{)",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.sigil.aivi"
            },
            "2": {
              "name": "punctuation.definition.string.begin.aivi"
            }
          },
          "end": "(?<!\\\\)\\}(?:[a-zA-Z]*)",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.aivi"
            }
          },
          "name": "string.quoted.other.sigil.aivi",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.aivi"
            }
          ]
        }
      ]
    },
    "string": {
      "patterns": [
        {
          "begin": "\"",
          "end": "\"",
          "name": "string.quoted.double.aivi",
          "patterns": [
            {
              "match": "\\\\([\\\\\\\"nrt]|u\\{[0-9a-fA-F]+\\})",
              "name": "constant.character.escape.aivi"
            }
          ]
        },
        {
          "begin": "`",
          "end": "`",
          "name": "string.quoted.other.backtick.aivi"
        },
        {
          "begin": "'",
          "end": "'",
          "name": "string.quoted.single.aivi",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.aivi"
            }
          ]
        }
      ]
    },
    "type": {
      "patterns": [
        {
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b",
          "name": "entity.name.type.aivi"
        }
      ]
    }
  },
  "scopeName": "source.aivi"
}
