{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "AIVI",
  "scopeName": "source.aivi",
  "patterns": [
    { "include": "#comment" },
    { "include": "#string" },
    { "include": "#number" },
    { "include": "#decorator" },
    { "include": "#keyword" },
    { "include": "#boolean" },
    { "include": "#type" },
    { "include": "#operator" }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "name": "comment.line.double-slash.aivi",
          "match": "//.*$"
        },
        {
          "name": "comment.block.aivi",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "string": {
      "patterns": [
        {
          "name": "string.quoted.double.aivi",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.aivi",
              "match": "\\\\([\\\\\"nrt]|u\\{[0-9a-fA-F]+\\})"
            }
          ]
        },
        {
          "name": "string.quoted.other.backtick.aivi",
          "begin": "`",
          "end": "`"
        },
        {
          "name": "string.quoted.single.aivi",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.aivi",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "number": {
      "patterns": [
        {
          "name": "constant.numeric.aivi",
          "match": "\\b\\d+(?:\\.\\d+)?\\b"
        }
      ]
    },
    "decorator": {
      "patterns": [
        {
          "name": "meta.annotation.decorator.aivi",
          "match": "@[a-z][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "boolean": {
      "patterns": [
        {
          "name": "constant.language.boolean.aivi",
          "match": "\\b(True|False)\\b"
        }
      ]
    },
    "keyword": {
      "patterns": [
        {
          "name": "keyword.control.aivi",
          "match": "\\b(if|then|else|when|effect|generate|yield|defer|loop|recurse|do|let|in|pure|async)\\b"
        },
        {
          "name": "keyword.other.aivi",
          "match": "\\b(module|export|use|as|hiding|domain|class|instance|type|over)\\b"
        },
        {
          "name": "constant.language.null.aivi",
          "match": "\\b(None|Empty|Unit)\\b"
        }
      ]
    },
    "type": {
      "patterns": [
        {
          "name": "entity.name.type.aivi",
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "operator": {
      "patterns": [
        {
          "name": "keyword.operator.aivi",
          "match": "(::=|&&|\\|\\||=>|<-|->|<\\||\\|>|\\.{2}|:=|==|!=|>=|<=|<<|>>|\\?|\\+|-|\\*|/|%|=|:|\\.|,|;|<|>|!|~|\\^|&|\\||→|⇒|▷|⇐|←|≠|≥|≤|∧|∨|…)"
        }
      ]
    }
  }
}

