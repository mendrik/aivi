{
  "scopeName": "text.html.aivi.injection",
  "injectionSelector": "L:source.aivi",
  "patterns": [
    {
      "begin": "(~html)(~>)",
      "end": "(<~)(html)\\b",
      "beginCaptures": {
        "1": { "name": "entity.name.function.sigil.aivi" },
        "2": { "name": "punctuation.definition.tag.begin.aivi" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.definition.tag.end.aivi" },
        "2": { "name": "entity.name.function.sigil.close.aivi" }
      },
      "patterns": [
        {
          "begin": "(\\{)",
          "end": "(\\})",
          "beginCaptures": {
            "1": { "name": "punctuation.section.embedded.begin.aivi" }
          },
          "endCaptures": {
            "1": { "name": "punctuation.section.embedded.end.aivi" }
          },
          "patterns": [
            { "include": "source.aivi" }
          ]
        },
        { "include": "text.html.basic" }
      ]
    }
  ]
}

