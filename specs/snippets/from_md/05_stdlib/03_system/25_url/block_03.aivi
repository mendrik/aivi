domain Url over Url = {
  // Add a query parameter
  (+) : Url -> (String, String) -> Url
  (+) = url (key, value) => {
    ...url,
    query: url.query ++ [(key, value)]
  }

  // Remove a query parameter by key
  (-) : Url -> String -> Url
  (-) = url key => {
    ...url,
    query: filter (\(k, _) -> k != key) url.query
  }

  // Update record fields (standard record update syntax)
  // url <| { protocol: "https" }
}
