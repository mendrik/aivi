use aivi.url

// Create using the ~u / ~url sigil
base = ~url(https://api.example.com/v1/search)

// Add parameter: "?q=aivi"
search = base + ("q", "aivi")

// Add another: "?q=aivi&sort=desc"
sorted = search + ("sort", "desc")

// Change protocol or path using record update
secure_login = base <| {
  path: "/v1/login",
  protocol: "wss"
}
